model Order {
  Id                String   @id @default(cuid())
  OrderID           String?
  TypeOfPaper       String?
  TaskLevel         String?
  SelectSubject     String?
  ReferencingStyle  String?
  NoOfSources       String?
  PaperStandard     String?
  PreferredLanguage String?
  NoOfPages         String?
  PaperFormat       String?
  Deadline          String?
  Topic             String?
  UserName          String?
  UserEmail         String?
  UserPhone         String?
  Country           String?
  PostalCode        String?
  UserInfo          String?
  TotalAmount       String?
  PricePerPage      String?
  CurrencyUnit      String?
  CreatedAt         DateTime @default(now())
  UpdatedAt         DateTime @updatedAt
}
